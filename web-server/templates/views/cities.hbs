<html lang="en">
  <head>
    <link rel="stylesheet" href="/css/styles.css" />
    <title>{{title}}</title>
  </head>
  <body>
    <div class="main-content">
      {{>header}}  
      <div id="cities">
        {{#each cities}}
          <div class="city-card">
            <h2>{{capital}}, {{country}}</h2>
            <p>Latitude: {{latitude}}, Longitude: {{longitude}}</p>
            <p>Forecast: {{forecast}}</p>
          </div>
        {{/each}}
      </div>
      {{>footer}}
    </div>
  </body>
</html>
